<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="onboarding_rubric_line_view_form_multipart" model="ir.ui.view">
        <field name="name">Onboarding: Rubric Lines Form - Multipart</field>
        <field name="model">onboarding.rubric.line</field>
        <field name="inherit_id" ref="onboarding_rubric_line_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='configuration']" position="inside">
                <group name="multipart" attrs="{'invisible':[('criteria_type','!=','multipart')]}">
                    <group string="Individual Criteria" colspan="4">
                        <field name="multipart_sub_criteria_line_ids" nolabel="1" colspan="2">
                            <tree>
                                <field name="name"/>
                                <field name="criteria_type" />
                                <field name="max_score"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
