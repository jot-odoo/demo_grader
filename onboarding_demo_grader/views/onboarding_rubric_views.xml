<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="onboarding_rubric_view_form" model="ir.ui.view">
        <field name="name">Onboarding: Rubric Form</field>
        <field name="model">onboarding.rubric</field>
        <field name="arch" type="xml">
            <form string="Rubric">
                <header></header>
                <sheet>
                    <div class="oe_button_box"></div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Business Use Case..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="version_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="criteria" string="Criteria">
                            <field name="line_ids" nolabel="1" colspan="4" widget="section_and_note_one2many"/>
                        </page>
                        <page name='prompt' string="Prompt">
                            <field name="description" nolabel="1" colspan="4"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" />
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="onboarding_rubric_view_tree" model="ir.ui.view">
        <field name="name">Onboarding: Rubrics Tree</field>
        <field name="model">onboarding.rubric</field>
        <field name="arch" type="xml">
            <tree string="Rubrics">
                <field name="name" />
                <field name="max_score" />
            </tree>
        </field>
    </record>

    <record id="onboarding_rubric_line_view_tree" model="ir.ui.view">
        <field name="name">Onboarding: Rubric Lines Tree</field>
        <field name="model">onboarding.rubric.line</field>
        <field name="arch" type="xml">
            <tree string="Criteria" editable="bottom">
                <control>
                    <create name="add_line_control" string="Add a line"/>
                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                    <create name="add_note" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                </control>
                <field name="sequence" widget="handle" />
                <field name="rubric_id" invisible="1"/>
                <field name="display_type" invisible="1" />
                <field name="name"/>
                <field name="criteria_type" />
                <field name="max_score" sum="Max Score"/>
                <button name="action_open_wizard" type="object" icon="fa-external-link" class="oe_edit_only"
                        title="Configure"/>
            </tree>
        </field>
    </record>

    <record id="onboarding_rubric_line_view_form" model="ir.ui.view">
        <field name="name">Onboarding: Rubric Lines Form</field>
        <field name="model">onboarding.rubric.line</field>
        <field name="arch" type="xml">
            <form string="Criteria">
                <header></header>
                <sheet>
                    <div class="oe_button_box"></div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Criteria..."/>
                        </h1>
                    </div>
                    <field name="display_type" invisible="1" />
                    <div attrs="{'invisible':[('display_type','!=',False)]}">
                        <group>
                            <group>
                                <field name="max_score"/>
                                <field name="criteria_type"/>
                                <field name="version_ids" invisible="1"/>
                            </group>
                            <group>
                                <field name="help_text" nolabel="1" colspan="2"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="configuration" string="Configuration">
                            </page>
                            <page name="description" string="Description">
                                <field name="description" nolabel="1" colspan="2"/>
                            </page>
                        </notebook>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
