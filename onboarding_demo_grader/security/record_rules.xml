<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="demo_see_own_demo" model="ir.rule">
        <field name="name">Own Demos</field>
        <field name="model_id" ref="model_onboarding_demo"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
    </record>
    
    <record id="demo_see_all" model="ir.rule">
        <field name="name">All demos</field>
        <field name="model_id" ref="model_onboarding_demo"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('onboarding_demo_grader.onboarding_demo_grader'))]"/>
    </record>

</odoo>